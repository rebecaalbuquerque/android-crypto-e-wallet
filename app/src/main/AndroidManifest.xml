<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.albuquerque.cryptoe_wallet">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".core.application.WalletApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_new_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_new_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".app.view.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".app.view.activity.LoginActivity" />
        <activity android:name=".app.view.activity.MainActivity" />
        <activity android:name=".app.view.activity.RegisterActivity" />

    </application>

</manifest>